<Page x:ConnectionId='1'
    x:Class="TreatSelf.MiInformacion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TreatSelf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:TreatSelf.Models"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton
                    Icon="Add"
                    Label="Agregar Tratamiento"
                    
                    />
                <AppBarSeparator/>
                <AppBarToggleButton
                    Icon="StopSlideShow"
                    Label="LogOut"
                    />
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock Text="Bienvenido" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock x:ConnectionId='16' x:Name="tu" Style="{StaticResource FlyoutPickerTitleTextBlockStyle}"/>
        </StackPanel>
        <SplitView x:ConnectionId='2' 
           x:Name="panel1"
           IsPaneOpen="False"
           CompactPaneLength="50"
           DisplayMode="CompactOverlay"
           OpenPaneLength="200" Margin="0,64,-10,120"
            PaneBackground="#333333"
            
            >

            <SplitView.Pane>
                <StackPanel>
                    <Button x:ConnectionId='3' Width="50" Height="auto"                  
                            >
                        <StackPanel>
                            <Rectangle Fill="White" Width="25" Height="3" Margin="0,0,0,4"/>
                            <Rectangle Fill="White" Width="25" Height="3" Margin="0,0,0,4"/>
                            <Rectangle Fill="White" Width="25" Height="3" Margin="0,0,0,4"/>
                        </StackPanel>
                    </Button>
                    <ListBox x:ConnectionId='4' x:Name="menu"
                                                            
                             Background="Transparent"
                             Margin="0" Padding="0"                              
                             
                             >
                        <ListBox.ItemTemplate>
                            <DataTemplate                         >
                                <StackPanel x:ConnectionId='5' Orientation="Horizontal">
                                    <SymbolIcon x:ConnectionId='6'                        
                                                Width="50" Height="50"
                                                Foreground="GreenYellow"
                                                />
                                    <TextBlock x:ConnectionId='7'                      
                                               VerticalAlignment="Center"
                                               Foreground="Green"
                                               />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>


                </StackPanel>
            </SplitView.Pane>

            <SplitView.Content>
                <StackPanel>
                <TextBlock Text="Tu información" Style="{StaticResource SubheaderTextBlockStyle}" Foreground="Aqua" />
                <Grid Width="250" Background="#2AC986" CornerRadius="10">
                 
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    
                    <TextBlock Text="Nombre: " Grid.Row="1" Grid.Column="0" />
                    <TextBlock Text="Apellido" Grid.Row="2" Grid.Column="0" />
                    <TextBlock Text="Correo" Grid.Row="3" Grid.Column="0"  />
                    <TextBlock Text="Telefono" Grid.Row="4" Grid.Column="0" />
                    <TextBlock Text="Cedula" Grid.Row="5" Grid.Column="0" />
                    <TextBlock Text="Username" Grid.Row="6" Grid.Column="0" />
                    <TextBlock Text="Password" Grid.Row="7" Grid.Column="0" />


                    <TextBox x:ConnectionId='8' x:Name="nombre" Width="150" Margin="0 0 0 10" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left"/>
                    <TextBox x:ConnectionId='9' x:Name="apellido"  Width="150" Margin="0 0 0 10"  Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left"/>
                    <TextBox x:ConnectionId='10' x:Name="correo"  Width="150" Margin="0 0 0 10"  Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left"/>
                    <TextBox x:ConnectionId='11' x:Name="telefono"   Width="150" Margin="0 0 0 10" Grid.Row="4" Grid.Column="1" HorizontalAlignment="Left"/>
                    <TextBox x:ConnectionId='12' x:Name="cedula"  Width="150" Margin="0 0 0 10"  Grid.Row="5" Grid.Column="1" HorizontalAlignment="Left"/>
                    <TextBox x:ConnectionId='13' x:Name="username" Width="150" Margin="0 0 0 10" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Left"/>

                    <StackPanel Grid.Row="7" Grid.Column="1" >
                        <PasswordBox x:ConnectionId='14' x:Name="password" Width="150" Margin="0 0 0 10" HorizontalAlignment="Left"/>

                        <Button x:ConnectionId='15' Content="Agregar" HorizontalAlignment="Right" Background="GhostWhite"                       />
                    </StackPanel>
                </Grid>
                </StackPanel>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

