<Page x:ConnectionId='1'
    x:Class="TreatSelf.MiInformacion"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TreatSelf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:TreatSelf.Models"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='2'
                    Icon="Add"
                    Label="Agregar Tratamiento"                         
                    
                    />
                <AppBarSeparator/>
                <AppBarToggleButton x:ConnectionId='3'
                    Icon="StopSlideShow"
                    Label="LogOut"               
                    />
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock Text="Bienvenido" Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock x:ConnectionId='19' x:Name="tu" Style="{StaticResource FlyoutPickerTitleTextBlockStyle}"/>
        </StackPanel>
        <SplitView x:ConnectionId='4' 
           x:Name="panel1"
           IsPaneOpen="False"
           CompactPaneLength="50"
           DisplayMode="CompactOverlay"
           OpenPaneLength="200" Margin="0,64,-10,120"
            PaneBackground="#333333"
            
            >

            <SplitView.Pane>
                <StackPanel>
                    <Button x:ConnectionId='5' Width="50" Height="auto"                  
                            >
                        <StackPanel>
                            <Rectangle Fill="White" Width="25" Height="3" Margin="0,0,0,4"/>
                            <Rectangle Fill="White" Width="25" Height="3" Margin="0,0,0,4"/>
                            <Rectangle Fill="White" Width="25" Height="3" Margin="0,0,0,4"/>
                        </StackPanel>
                    </Button>
                    <ListBox x:ConnectionId='6' x:Name="menu"
                                                            
                             Background="Transparent"
                             Margin="0" Padding="0"                              
                             
                             >
                        <ListBox.ItemTemplate>
                            <DataTemplate                         >
                                <StackPanel x:ConnectionId='7' Orientation="Horizontal">
                                    <SymbolIcon x:ConnectionId='8'                        
                                                Width="50" Height="50"
                                                Foreground="GreenYellow"
                                                />
                                    <TextBlock x:ConnectionId='9'                      
                                               VerticalAlignment="Center"
                                               Foreground="White"
                                               />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>


                </StackPanel>
            </SplitView.Pane>

            <SplitView.Content>
                <StackPanel>
                <TextBlock Text="Tu información" Style="{StaticResource SubheaderTextBlockStyle}" Foreground="Aqua" />
                    <RelativePanel HorizontalAlignment="Left" VerticalAlignment="Top" Background="#2AC986"  CornerRadius="5" Width="500" Padding="20" Margin="10, 10, 10, 10">
                        <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Horizontal">
                        <StackPanel>
                                <TextBlock Text="Nombre: "  Margin="0,10,0,10"/>
                                <TextBlock Text="Apellido"  Margin="0,10,0,10" />
                                <TextBlock Text="Correo"  Margin="0,10,0,10" />
                                <TextBlock Text="Telefono"  Margin="0,10,0,10" />
                               
                         </StackPanel>
                            <StackPanel>
                                <TextBox x:ConnectionId='15' x:Name="nombre" Width="130" Margin="10,0,0,10"  HorizontalAlignment="Left"/>
                                <TextBox x:ConnectionId='16' x:Name="apellido"  Width="130" Margin="10,0,0,10"  HorizontalAlignment="Left"/>
                                <TextBox x:ConnectionId='17' x:Name="correo"  Width="130" Margin="10,0,0,10" HorizontalAlignment="Left"/>
                                <TextBox x:ConnectionId='18' x:Name="telefono"   Width="130" Margin="10,0,0,10" HorizontalAlignment="Left"/>
                                
                        </StackPanel>
                        
                        </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel>
                                    <TextBlock Text="Cedula"  Margin="20,10,0,10" />
                                    <TextBlock Text="Username"  Margin="20,10,0,10" />
                                    <TextBlock Text="Password"  Margin="20,10,0,10" />
                                </StackPanel>
                                <StackPanel>
                                    <TextBox x:ConnectionId='10' x:Name="cedula"  Width="130" Margin="10,0,0,10"  HorizontalAlignment="Left"/>
                                    <TextBox x:ConnectionId='11' x:Name="username" Width="130" Margin="10,0,0,10" HorizontalAlignment="Left"/>
                                    <PasswordBox x:ConnectionId='12' x:Name="password" Width="130" Margin="10,0,0,10" HorizontalAlignment="Left"/>
                                    <Button x:ConnectionId='13' Content="Guardar" HorizontalAlignment="Right" Background="GhostWhite"                       />
                                    <ProgressRing x:ConnectionId='14' x:Name="Esperar1" IsActive="true"
                                                  Visibility="Collapsed"
                                                  Margin="0 15 0 0"
                                                  Width="40"
                                                  Height="40"
                                                  />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </RelativePanel>
                </StackPanel>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

