<Page x:ConnectionId='1'
    x:Class="TreatSelf.Tratamientos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TreatSelf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:TreatSelf.Models"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='2'
                    Icon="Add"
                    Label="Agregar Tratamiento"                            
                    
                    />
                <AppBarSeparator/>
                <AppBarToggleButton
                    Icon="StopSlideShow"
                    Label="LogOut"
                    />
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <SplitView x:ConnectionId='3' 
           x:Name="panel1"
           IsPaneOpen="False"
           CompactPaneLength="50"
           DisplayMode="CompactOverlay"
           OpenPaneLength="200" Margin="0,64,-10,120"
            PaneBackground="#333333"
            >
            <SplitView.Pane>
                <StackPanel>
                    <Button x:ConnectionId='4' Width="50" Height="50"                  
                            >
                        <StackPanel>
                            <Rectangle Fill="White" Width="25" Height="3" Margin="0,0,0,4"/>
                            <Rectangle Fill="White" Width="25" Height="3" Margin="0,0,0,4"/>
                            <Rectangle Fill="White" Width="25" Height="3" Margin="0,0,0,4"/>
                        </StackPanel>
                    </Button>
                    <ListBox x:ConnectionId='5' x:Name="menu"
                                                            
                             Background="Transparent"
                             Margin="0" Padding="0"                              
                             
                             >
                        <ListBox.ItemTemplate>
                            <DataTemplate                         >
                                <StackPanel x:ConnectionId='6' Orientation="Horizontal">
                                    <SymbolIcon x:ConnectionId='7'                        
                                                Width="50" Height="50"
                                                Foreground="GreenYellow"
                                                />
                                    <TextBlock x:ConnectionId='8'                      
                                               VerticalAlignment="Center"
                                               Foreground="Green"
                                               />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>


                </StackPanel>
            </SplitView.Pane>
                
            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="250"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <ListBox x:ConnectionId='9'
                                                       
                         Grid.Row="0"
                        x:Name="Tratas"
                         >
                    <ListBox.ItemTemplate>
                        <DataTemplate                                >
                            <Border x:ConnectionId='14' BorderBrush="GreenYellow" 
                              HorizontalAlignment="Center" 
                              BorderThickness="0,0,0,5" >
                                <StackPanel Margin="10 0 0 0">
                                    <TextBlock x:ConnectionId='15' Style="{StaticResource TitleTextBlockStyle}" 
                                                                     />
                                    <TextBlock x:ConnectionId='16' Style="{StaticResource CaptionTextBlockStyle}" 
                                                                   />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>
                    <StackPanel Grid.Row="1" DataContext="{Binding SelectedItem, ElementName=Tratas}">
                        <TextBlock x:ConnectionId='10' x:Name="nombre1" Margin="0 0 0 10" Text="{Binding NomTratamiento , Mode=TwoWay}"/>
                        <TextBlock x:ConnectionId='11' x:Name="sabor1"  Margin="0 0 0 10" Text="{Binding Descripcion, Mode=TwoWay}"/>
                        <TextBlock x:ConnectionId='12' x:Name="color1" Margin="0 0 0 10" Text="{Binding Fechainicio, Mode=TwoWay}"/>
                        <TextBlock x:ConnectionId='13' x:Name="precio1" Margin="0 0 0 10" Text="{Binding Fechafin, Mode=TwoWay}"/>
                        
                    </StackPanel>
                </Grid>
            </SplitView.Content>
        </SplitView>
            
    </Grid>
</Page>

