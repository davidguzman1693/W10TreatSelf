<Page x:ConnectionId='1'
    x:Class="TreatSelf.Medico"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TreatSelf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:TreatSelf.Models"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='2'
                    Icon="Add"
                    Label="Agregar Tratamiento"                         
                    
                    />
            <AppBarSeparator/>
                <AppBarToggleButton
                    Icon="StopSlideShow"
                    Label="LogOut"
                    />
            </CommandBar.PrimaryCommands>
         </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
        <TextBlock Text="Bienvenido" Style="{StaticResource TitleTextBlockStyle}"/>
        <TextBlock x:ConnectionId='11' x:Name="tu" Style="{StaticResource FlyoutPickerTitleTextBlockStyle}"/>
        </StackPanel>
        <SplitView x:ConnectionId='3' 
           x:Name="panel1"
           IsPaneOpen="False"
           CompactPaneLength="50"
           DisplayMode="CompactOverlay"
           OpenPaneLength="200" Margin="0,64,-10,120"
            PaneBackground="#333333"
            
            >
            
            <SplitView.Pane>
                <StackPanel>
                    <Button x:ConnectionId='4' Width="50" Height="50"                  
                            >
                        <StackPanel>
                            <Rectangle Fill="White" Width="25" Height="3" Margin="0,0,0,4"/>
                            <Rectangle Fill="White" Width="25" Height="3" Margin="0,0,0,4"/>
                            <Rectangle Fill="White" Width="25" Height="3" Margin="0,0,0,4"/>
                        </StackPanel>
                    </Button>
                    <ListBox x:ConnectionId='5' x:Name="menu"
                                                            
                             Background="Transparent"
                             Margin="0" Padding="0"                              
                             
                             >
                        <ListBox.ItemTemplate>
                            <DataTemplate                         >
                                <StackPanel x:ConnectionId='6' Orientation="Horizontal">
                                    <SymbolIcon x:ConnectionId='7'                        
                                                Width="50" Height="50"
                                                Foreground="GreenYellow"
                                                />
                                    <TextBlock x:ConnectionId='8'                      
                                               VerticalAlignment="Center"
                                               Foreground="Green"
                                               />
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    
                </StackPanel>
            </SplitView.Pane>
            
            <SplitView.Content>
               
                    <Pivot>
                    <PivotItem Header="Tus pacientes" >
                        
                           
                            <ListBox x:ConnectionId='10' x:Name="listaPaci"
                                                    
                         Grid.Row="0"                                        
                                     
                         >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="GreenYellow" 
                              HorizontalAlignment="Center" 
                              BorderThickness="0,0,0,5" >
                                    <StackPanel Margin="10 0 0 0">
                                        <TextBlock Style="{StaticResource TitleTextBlockStyle}" 
                                       Text="{Binding Nombre, Mode=TwoWay}"/>
                                        <TextBlock Style="{StaticResource CaptionTextBlockStyle}" 
                                       Text="{Binding Apellido, Mode=TwoWay}"/>
                                        <TextBlock Style="{StaticResource BodyTextBlockStyle}"
                                       Text="{Binding Correo, Mode=TwoWay}"/>

                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>

                    </ListBox>
                            
                  
    </PivotItem>
                <PivotItem Header="Mas pacientes">
                   
                        <ListBox x:ConnectionId='9' x:Name="listaNoPaci"
                           Grid.Row="0"
                                                      
                                                                         
                         >
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="GreenYellow" 
                              HorizontalAlignment="Center" 
                              BorderThickness="0,0,0,5" >
                                        <StackPanel Margin="10 0 0 0">
                                            
                                            <TextBlock Style="{StaticResource TitleTextBlockStyle}" 
                                       Text="{Binding Nombre, Mode=TwoWay}"/>
                                            <TextBlock Style="{StaticResource CaptionTextBlockStyle}" 
                                       Text="{Binding Apellido, Mode=TwoWay}"/>
                                            <TextBlock Style="{StaticResource BodyTextBlockStyle}"
                                       Text="{Binding Correo, Mode=TwoWay}"/>
                                            
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>


                        </ListBox>
                        
                    
                    
                </PivotItem>
            </Pivot>
                
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>

