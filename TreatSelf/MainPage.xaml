<Page
    x:Class="TreatSelf.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TreatSelf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:TreatSelf.Models"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>


          <RelativePanel Background="#2AC986"  CornerRadius="5" Padding="20" Grid.Column="0">
                        <Border BorderBrush="GreenYellow" 
                              HorizontalAlignment="Center" 
                              BorderThickness="0,0,0,5" >
                            <StackPanel Orientation="Horizontal" Width="200">
                                <StackPanel>
                                    <TextBlock Text="User " Margin="0,10,0,10" />
                                    <TextBlock Text="Password " Margin="0,10,0,0"  />
                                </StackPanel>
                                <StackPanel>
                                    <TextBox x:Name="user" PlaceholderText="Username" Margin="10,10,0,10" Background="Gray"/>
                                    <PasswordBox x:Name="pass" Margin="10,0,0,0" Background="Gray"/>
                                    <Button Content="Iniciar Sesion" Margin="0,10,0,10" Background="GhostWhite" Click="login"  />
                                </StackPanel>
                                
                            </StackPanel>
                        </Border>
                    </RelativePanel>
        

        <RelativePanel Background="#2AC986"  CornerRadius="5" Padding="20" Grid.Column="1">
                        
                            <StackPanel Width="100">
                                <TextBox Header="Nombre" x:Name="name" PlaceholderText="Nombre" Margin="10,10,0,10" Background="Gray" />
                                <TextBox Header="Apellido" x:Name="lastname" PlaceholderText="Apellido" Margin="10,10,0,10" Background="Gray"/>
                                <TextBox Header="Cedula" x:Name="cedula" PlaceholderText="Cedula" Margin="10,10,0,10" Background="Gray"/>
                                <TextBox Header="Correo" x:Name="mail" PlaceholderText="Correo" Margin="10,10,0,10" Background="Gray"/>
                                <TextBox Header="Telefono" InputScope="Number" x:Name="telefono" PlaceholderText="Telefono" Margin="10,10,0,10" Background="Gray"/>
                                <TextBox Header="Username" x:Name="username" PlaceholderText="Username" Margin="10,10,0,10" Background="Gray"/>
                                <PasswordBox Header="Contraseña" x:Name="password" Margin="10,0,0,0" Background="Gray"/>
                                <ToggleSwitch Header="Perfil" x:Name="perfil" Margin="10,0,0,0" OnContent="Medico" OffContent="Paciente" />
                                <Button Content="Registrarse" Margin="0,10,0,10" Background="GhostWhite" Click="Register" />
                        
                        </StackPanel>
                    </RelativePanel>
              

    </Grid>
</Page>
