<Page
    x:Class="TreatSelf.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TreatSelf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:TreatSelf.Models"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto" />

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock Style="{StaticResource HeaderTextBlockStyle}" Text="TREATSELF" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0"/>
        <TextBlock  Style="{StaticResource SubheaderTextBlockStyle}" Text="Inicia Sesion" Grid.Column="0" Grid.Row="1"/>
        <TextBlock  Style="{StaticResource SubheaderTextBlockStyle}" Text="Registrate" Grid.Column="1" Grid.Row="1"/>
        <RelativePanel VerticalAlignment="Top" Grid.Column="0" Grid.Row="2" Background="#2AC986"  CornerRadius="5" Padding="20" Height="200" Margin="10, 10, 10, 10">
                        <Border BorderBrush="GreenYellow" 
                              HorizontalAlignment="Center" 
                              BorderThickness="0,0,0,5" >
                            <StackPanel Orientation="Horizontal" Width="200">
                                <StackPanel>
                                    <TextBlock Text="User " Margin="0,10,0,10" />
                                    <TextBlock Text="Password " Margin="0,10,0,0"  />
                                </StackPanel>
                                <StackPanel>
                                    <TextBox x:Name="user" PlaceholderText="Username" Margin="10,0,0,10" Background="Gray"/>
                                    <PasswordBox x:Name="pass" Margin="10,0,0,10" Background="Gray"/>
                                    <ProgressRing x:Name="Esperar" IsActive="true"
                                                  Visibility="Collapsed"
                                                  Margin="0 15 0 0"
                                                  Width="40"
                                                  Height="40"
                                                  />
                                    <Button Content="Iniciar Sesion" Margin="0,10,0,10" Background="GhostWhite" Click="login"  />
                                </StackPanel>

                            </StackPanel>
                        </Border>
                    </RelativePanel>
            
                
                    <RelativePanel
                        Margin="10, 10, 10, 10"
                        Grid.Row="2" Grid.Column="1" Background="#2AC986"  CornerRadius="5" Padding="20">
                        <StackPanel Orientation="Horizontal" Width="200">
                            <StackPanel>
                                <TextBlock Text="Nombre " Margin="0,10,0,10" />
                                <TextBlock Text="Apellido " Margin="0,10,0,10" />
                                <TextBlock Text="Cedula " Margin="0,10,0,10" />
                                <TextBlock Text="Telefono " Margin="0,10,0,10" />
                                <TextBlock Text="Correo " Margin="0,10,0,10" />
                                
                                <TextBlock Text="User " Margin="0,10,0,10" />
                                <TextBlock Text="Password " Margin="0,10,0,10"  />
                                <TextBlock Text="Perfil " Margin="0,10,0,10"  />
                            </StackPanel>
                            <StackPanel>
                                <TextBox x:Name="name" PlaceholderText="Nombre" Margin="10,0,0,10" Background="Gray" />
                                <TextBox x:Name="lastname" PlaceholderText="Apellido" Margin="10,0,0,10" Background="Gray"/>
                                <TextBox x:Name="cedula" PlaceholderText="Cedula" Margin="10,0,0,10" Background="Gray"/>
                                <TextBox InputScope="Number" x:Name="telefono" PlaceholderText="Telefono" Margin="10,0,0,10" Background="Gray"/>
                                <TextBox x:Name="mail" PlaceholderText="Correo" Margin="10,0,0,10" Background="Gray"/>
                                <TextBox x:Name="username" PlaceholderText="Username" Margin="10,0,0,10" Background="Gray"/>
                                <PasswordBox x:Name="password" Margin="10,0,0,10" Background="Gray"/>
                                <ToggleSwitch x:Name="perfil" Margin="10,0,0,10" OnContent="Medico" OffContent="Paciente" />
                                <ProgressRing x:Name="Esperar1" IsActive="true"
                                                  Visibility="Collapsed"
                                                  Margin="0 15 0 0"
                                                  Width="40"
                                                  Height="40"
                                                  />
                    <Button Content="Registrarse" Margin="0,10,0,10" Background="GhostWhite" Click="Register" />
                            </StackPanel>
                        </StackPanel>
                    </RelativePanel>
             
    </Grid>
</Page>
